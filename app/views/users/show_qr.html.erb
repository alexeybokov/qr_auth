<h1 class="mt-3 text-center col-5 offset-3 ">Now Set up 2nd factor authenticate</h1>
  <div class="row">
    <div class="col-5 offset-3 border border-secondary p-5 bg-light">
      <div class="qr_code text-center">
        <%= raw @qr_code.as_svg(module_size: 3) %>
      </div>


      <%= form_with(url: qr_setup_path(id: @user.id)) do |form|%>
        <div class="field">
          <%= form.label :authentication_code, class: 'd-block mt-2 text-center' %>
          <%= form.password_field :authentication_code, class: 'form-control' %>
        </div>

        <div class='text-center mt-3'>
           <%= form.submit 'Save', class: 'btn btn-primary w-25'%>
        </div>
    </div>
  </div>
<% end %>


