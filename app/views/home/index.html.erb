<h1 class="mt-3 text-center">Welcome</h1>

<div class="mt-3 text-center">
  <% if current_user %>
    Logged in as <%= current_user.email %>
      <h3 class="mt-2">
        <%= link_to('Log Out', logout_path, class: 'badge badge-light') %>
      </h3>

  <% else %>
    <h1>
      <%= link_to('Log In', login_path, class: 'badge badge-light')%> or
      <%= link_to('Sign Up', signup_path, class: 'badge badge-light') %>
    </h1>
  <% end %>
</div>
